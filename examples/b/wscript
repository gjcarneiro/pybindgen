## -*- python -*-

def build(bld):

    gen = bld.new_task_gen(
        features='command',
        source='modulegen.py',
        target='bmodule.cc',
        command='${PYTHON} -Werror::DeprecationWarning ${SRC[0]} > ${TGT[0]}')

    if bld.env['CXX']:
        obj = bld.new_task_gen('cxx', 'shlib', 'pyext')
        obj.source = [
            'b.cc',
            'bmodule.cc'
            ]
        obj.target = 'b'
        obj.install_path = None # do not install
        obj.includes = '.'
